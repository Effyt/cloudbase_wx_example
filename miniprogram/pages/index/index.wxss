.swiper-box {
  height: 180px;
}

.swiper-box .image {
  width: 100%;
  height: 180px;
}



.menu-wrapper {
  padding: 10rpx;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
}

.menu-wrapper .icon {
  width: 85rpx;
  height: 85rpx;
  display: block;
  margin: 0 auto 10rpx auto;
}

.menu-wrapper .menu-part {
  margin: 5rpx;
  padding: 60rpx 0;
}

.menu-wrapper .menu-item {
  width: 32%;
}

.menu-wrapper .menu-left {
  width: calc(68% - 18rpx);
  background: #d3544d;
}

.menu-wrapper .menu-right {
  width: 32%;
}

.shop-list-wrapper {
  margin-top: 20rpx;
  padding-top: 20rpx;
  text-align: center;
}

.shop-list-wrapper .shop-title {
  font-size: 30rpx;
  color: #d3544d;
  border-bottom: 1px solid #d3544d;
  margin-bottom: 15rpx;
  display: inline-block;
}

.shop-list-wrapper .shop-tip {
  font-size: 24rpx;
  color: #666;
  padding-bottom: 10rpx;
}

.shop-list {
  border-top: 1rpx solid #f3f3f3;
  text-align: left;
}

.shop-list .shop-item {
  width: 50%;
  display: inline-block;
  box-sizing: border-box;
  border-right: 1rpx solid #f3f3f3;
  border-bottom: 1rpx solid #f3f3f3;
}

.shop-list .shop-item image {
  max-width: 100%;
  height: 300rpx;
}

.shop-item .shop-cont {
  padding: 20rpx;
}